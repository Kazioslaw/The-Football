<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Match[0].FirstTeamScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Match[0].SecondTeamScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Match[0].CompetitionId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Match[0].Date)
            </th>
            <th>
