        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstTeamScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondTeamScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompetitionId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstClub.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondClub.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
